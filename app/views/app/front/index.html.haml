:javascript
    $(document).ready(function () {
    $(window).on("scroll", function () {
      if ($(window).scrollTop() >= 130) {
        $("header").addClass('nav-fixed');
      } else {
        $("header").removeClass('nav-fixed');
      }
    });
    });

    $(document).ready(function () {
    $('#button-white').css('display', 'block');
    $('#button-green').css('display', 'none');

    $(window).on("scroll", function () {
      if ($(window).scrollTop() >= 130) {
        $(".nav-link").addClass('nav-link-fixed');
        // $('#logo-white').css('display', 'none')
        // $('#logo-green').css('opacity', '1');
        $('#button-green').css('display', 'inherit');
        $('#icon-green').css('display', 'inherit');
        $('#button-white').css('display', 'none');
        $('#icon-white').css('display', 'none');
      } else {
        $(".nav-link").removeClass('nav-link-fixed');
        // $('#logo-green').css('opacity', '0');
        // $('#logo-white').css('display', 'inherit');
        $('#button-green').css('display', 'none');
        $('#icon-green').css('display', 'none');
        $('#button-white').css('display', 'inherit');
        $('#icon-white').css('display', 'inherit');
      }
    });
    });
