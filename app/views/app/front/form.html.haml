    'message[problem]': { required: true},
    'message[product]': { required: true},
    'message[company]': { required: true},
    'message[biography]': { required: true},
    'message[city]': { required: true},
    'message[income]': { required: true},
    'message[phone]': { required: true},
    'message[to_emails]': { required: true, email: true },
    'message[type_message]': { required: true }
  },
  messages: {
    'message[name]': 'Indica tu nombre',
    'message[company]': 'Indica el nombre de tu empresa',
    'message[income]': 'Indica tus ingresos',
    'message[phone]': 'Indica tu numero telefonico',
    'message[biography]': 'Indica tu biografia',
    'message[product]': 'Indica producto o servico',
    'message[problem]': 'Indica el problema a resolver',
    'message[city]': 'Indica tu ciudad',
    'message[to_emails]': 'Introduce un email válido',
