:javascript
  function recaptcha_callback(){
    // alert('callback working');
    if (($('#message_name2').val() != '')
      && ($('#message_income1').val() != '')
      && ($('#message_product1').val() != '')
      && ($('#message_company1').val() != '')
      && ($('#message_biography1').val() != '')
      && ($('#message_city1').val() != '')
      && ($('#message_phone1').val() != '')
      && ($('#message_email2').val() != '')) {
      $('.send').prop('disabled', false);
    } else {
      swal('Completa todos los campos');
      grecaptcha.reset();
    }
  }
  $('.keppler-custom-field input, textarea').removeClass('form-control');

  $("#new_message_product").validate({
  event: "blur",
  errorClass: "error-class",
  validClass: "valid-class",
  rules: {																																																																																																																																																								
